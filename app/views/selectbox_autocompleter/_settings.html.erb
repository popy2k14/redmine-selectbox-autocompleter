<p>
    <%= content_tag(:label, l(:label_target_list)) %>
    <%= text_area_tag "settings[target_list]", @settings['target_list'], :rows => 20 %>
</p>
<p>
  <%= content_tag(:label, l(:label_exclude_target_list)) %>
  <%= text_area_tag "settings[exclude_target_list]", @settings['exclude_target_list'], :rows => 20 %>
</p>
<p>
  <%= content_tag(:label, l(:label_min_count_show_search)) %>
  <%= number_field_tag "settings[min_count_show_search]", @settings['min_count_show_search'], :size => 5 %>
</p>
<p>
    <%= content_tag(:label, l(:label_autocomplete_type)) %>
    <%= select_tag "settings[autocomplete_type]", options_for_select({ l(:label_autocomplete_type_select2) => "select2", l(:label_autocomplete_type_datalist) => "datalist", l(:label_autocomplete_type_jquery) => "jquery" }, @settings['autocomplete_type']) %>
</p>
